@using MvcStokProje.Models.Entity
@*@model MvcStokProje.Models.Entity.TBLSATISLAR*@
@model List<TBLSATISLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Satışlar Sayfası</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>SATIŞ ID</th>
            <th>ÜRÜN ADI</th>
            <th>MÜŞTERİ ADI SOYADI</th>
            <th>ADET</th>
            <th>FİYAT</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var satis in Model)
        {
            <tr>
                <td>@satis.SATISID</td>
                <td>@satis.TBLURUNLER.URUNAD</td>
                <td>@satis.TBLMUSTERILER.MUSTERIAD @satis.TBLMUSTERILER.MUSTERISOYAD</td>
                <td>@satis.ADET</td>
                <td>@satis.FIYAT</td>
            </tr>
        }
    </tbody>
</table>




